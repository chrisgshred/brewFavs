<link rel="stylesheet" type="text/css" href="/stylesheets/user.css">
<script src='https://kit.fontawesome.com/a076d05399.js'></script>
<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand">Brew Favs <i class='fas fa-beer' style='font-size:24px; color:gold'></i></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/search">Search</a>
        <a class="nav-item nav-link" href="/add">Add</a>
        <a class="nav-item nav-link" href="/logout">Logout</a>
      </div>
    </div>
  </nav>
</header>
<br>
<div class="container">
  <div class="row1">
    <div class="icon">
      <h5>My Account</h5>
      {{#each userDetails }}
      <div>
        <br>
          <p> <i class='fa fa-envelope' style='font-size:24px'></i> : {{email}}</p>
          <p> <i class='fas fa-beer' style='font-size:24px'></i> : {{brews}}</p>
          <p> <i class='fa fa-home' style='font-size:24px'></i> : {{breweries}}</p>
      </div>
      {{/each}}
    </div>
  </div>

  <br>
  <div class="row ">
    <div class="col-6 d-flex justify-content-center">Brews
      <i class='fa fa-beer' style='font-size:20px'></i>

      <div class="container">
        <div class="row" id="fav-beer">
          <div class="userstats col-12 ">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">My Favorite Beers</h5>
                <h6 class="card-subtitle mb-2 text-muted">
                  {{#each productData }}
                  <div>
                    <br>
                    <ul>
                      <li> Name : {{name}}</li>
                      <p> Style : {{style}}</p>
                      <p> Ounces : {{ounces}}</p>
                  </div>
                  {{/each}}
                  </ul>
                </h6>
              </div>
            </div>
          </div>
        </div>
      </div>
      <br>


    </div>
    <div class="col-6 d-flex justify-content-center">Breweries
      <i class="fa fa-home" style="font-size:20px"></i>
      <div class="container">
        <div class="row" id="fav-brewery">
          <div class="userstats col-12 ">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">My Favorite Breweries</h5>
                <h6 class="card-subtitle mb-2 text-muted">
                  {{#each locationData }}
                  <div>
                    <br>
                      <li>Name : {{name}}</li>
                      <p>Location : {{city}}</p>
                      <p>Rating : {{state}} </p>
                  </div>
                  {{/each}}
                </h6>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">

<h1>Add Brew/Brewery</h1>

  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home"
        aria-selected="true">Beer</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile"
        aria-selected="false">Brewery</a>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">

      <form id="beerAddForm">
        <div class="form-row">
          <div class="col-md-4 mb-3">
            <label for="validationDefault01">Beer</label>
            <input type="text" class="form-control" id="nameField">
          </div>
          <div class="col-md-4 mb-3">
            <label for="validationDefault01">Style</label>
            <input type="text" class="form-control" id="styleSelect">
          </div>
          <div class="col-md-4 mb-3">
            <label for="validationDefault01">Ounces</label>
            <input type="text" class="form-control" id="ouncesSelect">
          </div>
        </div>
        <button style='font-size:16px'>Add Beer<i class='fas fa-beer'></i></button>
      </form>

    </div>

    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">

      <form id="brewerySearchForm">
        <div class="form-row">
          <div class="col-md-4 mb-3">
            <label for="validationDefault01">Brewery</label>
            <input type="text" class="form-control" id="breweryName">
          </div>
          <div class="col-md-4 mb-3">
            <label for="validationDefault01">City</label>
            <input type="text" class="form-control" id="breweryCity">
          </div>
          <div class="col-md-4 mb-3">
            <label for="validationDefault01">State</label>
            <input type="text" class="form-control" id="breweryState">
          </div>
        </div>
        <button style='font-size:16px'>Add Brewery <i class='fa fa-home'></i></button>
      </form>

    </div>
  </div>
  <br>
</div>

<script type="text/javascript" src="/js/add.js"></script>